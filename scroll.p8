__lua__
-- scrolling prototype
-- - how long is a level?
-- - what is a good speed?
-- - (tileset?)

-- map
-- 128 tiles
-- 32 tiles

-- screen
-- 16 x 16 tiles

-- 8 screens
-- 2 screens

-- 16 screens (15 screens)

-- speed 0.5
-- around 60 seconds

function _init()
 scroll=-128
 
 mapsegs={}
 
 add(mapsegs,{
  mx=0,
  my=0
 })
 add(mapsegs,{
  mx=16,
  my=0
 })
 add(mapsegs,{
  mx=32,
  my=0
 })

 add(mapsegs,{
  mx=48,
  my=0
 })
 add(mapsegs,{
  mx=64,
  my=0
 })
 add(mapsegs,{
  mx=80,
  my=0
 })
 add(mapsegs,{
  mx=96,
  my=0
 })
 add(mapsegs,{
  mx=112,
  my=0
 })
end

function _draw()
 cls(2)
 for i=1,#mapsegs do
  local myseg=mapsegs[i]
  local segx=scroll-(i-1)*256
  map(myseg.mx,myseg.my,0,segx,16,32)
 end
 print(flr(time()),5,5,7)
end

function _update60()
 scroll+=0.2
end
